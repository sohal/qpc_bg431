{
  "version": 2,
  "cmakeMinimumRequired": {
      "major": 3,
      "minor": 22,
      "patch": 0
  },
  "configurePresets": [
    {
        "hidden": true,
        "name": "llvm",
        "environment": {
            "LLVM_CLANG_ROOT_FOLDER": "$env{HOME}/llvm_arm"
        },
        "cacheVariables": {
            "GITHUB_BRANCH_TOOLCHAIN": "HEAD",
            "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/_deps/cmake_scripts-src/toolchains/llvm_clang_arm.cmake"
        }
    },
    {
        "hidden": true,
        "name": "mcu",
        "environment": {
            "CORTEX_TYPE": "CM0",
            "SEGGER_JLINK_ROOT_FOLDER": "/Applications/SEGGER/JLink"
        },
        "cacheVariables": {
            "STM32_TYPE": "f0",
            "STM32_DEVICE": "STM32F031x6",
            "JLINK_DEVICE": "STM32F031K6"
        }
    },
    {
        "hidden": true,
        "name": "base",
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "cacheVariables": {
            "test_all_frameworks": "true",
            "FETCHCONTENT_UPDATES_DISCONNECTED": "OFF",
            "FETCHCONTENT_QUIET": "false",
            "FETCHCONTENT_BASE_DIR": "${sourceDir}/_deps",
            "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}"
        }
    },
    {
        "inherits":[
            "base", "llvm", "mcu"
        ],
        "name": "d-llvm-mcu",
        "displayName": "d-llvm-mcu",
        "description": "Debug mcu with llvm"
    }
    ],
    "buildPresets": [
    {
        "name": "d-llvm-mcu",
        "configurePreset": "d-llvm-mcu"
    }
    ]
}
